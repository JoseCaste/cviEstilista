<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewServicio"
    android:layout_width="335dp"
    android:layout_height="270dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="13dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    app:cardBackgroundColor="#F80202"
    app:cardCornerRadius="15dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="321dp"
        android:layout_height="250dp"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/txtNombrePerro"
            android:layout_width="189dp"
            android:layout_height="35dp"
            android:layout_below="@+id/idPerro"
            android:layout_alignParentStart="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="10dp"
            android:text="NombrePerro"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtComentario"
            android:layout_width="284dp"
            android:layout_height="54dp"
            android:layout_below="@+id/txtServicio"
            android:layout_alignParentStart="true"
            android:layout_marginStart="34dp"
            android:layout_marginTop="14dp"
            android:text="TextView"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNombrePerro"
            android:layout_alignParentStart="true"
            android:layout_marginStart="33dp"
            android:layout_marginTop="13dp"
            android:text="Responsable"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtResponsable"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNombrePerro"
            android:layout_marginStart="11dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@+id/textView3"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtContacto"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtResponsable"
            android:layout_marginStart="54dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/textView5"
            android:text="TextView"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_alignParentStart="true"
            android:layout_marginStart="34dp"
            android:layout_marginTop="8dp"
            android:text="Contacto"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/txtFecha"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="14dp"
            android:text="TextView"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/txtCostoItem"
            android:layout_width="116dp"
            android:layout_height="33dp"
            android:layout_below="@+id/txtFecha"
            android:layout_marginStart="14dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/txtNombrePerro"
            android:text="Costo"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />

        <TextView
            android:id="@+id/idPerro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="31dp"
            android:layout_marginTop="16dp"
            android:text="TextView"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_alignParentStart="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="12dp"
            android:text="@string/servicio"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/txtServicio"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtContacto"
            android:layout_marginStart="74dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/textView2"
            android:text="TextView"
            android:textColor="#FFFFFF" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>